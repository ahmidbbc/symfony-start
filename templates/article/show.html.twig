{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    <h1>{{ article.title }}</h1>

    {% if article.image is not empty %}
     <img src="img/photos/{{ article.image }}" class="img-fluid">
    {% endif %}

    <p>paru le {{ article.createdAt | date('d/m/Y') }}</p>

    <p>par : {{ article.author.fullName }}</p>

    <div>
        {{ article.content | purify}}
    </div>

    <hr>

    <div class="row">
        <h1>Commentaires</h1>
        <div class="col-md-8"></div>
        <div class="col-md-4">
            {{ form_start(commentForm) }}
                {{ form_widget(commentForm) }}

                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-dark">
                        Envoyer
                    </button>
                </div>
            {{ form_end(commentForm) }}
        </div>
    </div>

{% endblock %}

